{
	"manifest_version": 2,
	"name": "Maxdone Extension",
	"description": "This extension adds fancy features to Maxdone web application",
	"version": "1.0",

	"browser_action": 
	{
		"default_icon": "icon19.png",
		"default_popup": "popup.html"
	},
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
	"permissions": 
	[
		"activeTab",
		"tabs",
		"storage",
		"<all_urls>"
	],
	
	"icons": { "16": "icon16.png",
           "48": "icon48.png",
          "128": "icon128.png" }
}
